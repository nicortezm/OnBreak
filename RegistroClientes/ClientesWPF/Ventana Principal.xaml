    <Grid>
        <Image Source="/Imagenes/dark_logo_transparent_background.png" Margin="364,10,460,437" />

        <!--btn admin clientes-->
        <Controls:Tile x:Name="btnAdminclientes" Margin="302,362,742,279" Background="#FF2B78E4" Width="Auto" Height="Auto" Click="btnAdminclientes_Click" FontSize="24" Title="Administracion&#xA;de Clientes" TitleFontSize="18" VerticalTitleAlignment="Center" HorizontalContentAlignment="Left" Padding="-1,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalTitleAlignment="Center" >
