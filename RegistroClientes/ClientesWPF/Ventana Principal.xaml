        <!--btn Listar clientes-->
        <Controls:Tile x:Name="btnListarClientes" Margin="306,528,742,113" Background="#009e0f" Width="Auto" Height="Auto" Click="btnListarCLiente_Click"  FontSize="24" TitleFontSize="18" Title="Listado&#xA;de Clientes" HorizontalTitleAlignment="Center" VerticalTitleAlignment="Center" HorizontalContentAlignment="Left">
