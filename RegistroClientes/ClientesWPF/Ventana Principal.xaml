        <!--btn Admin Contratos-->
        <Controls:Tile x:Name="btnAdminContratos" Margin="667,362,381,279" Background="#cc0000" Width="Auto" Height="Auto" Click="btnAdminContratos_Click"  FontSize="24" TitleFontSize="18" Title="Administracion&#xA;de Contratos" HorizontalTitleAlignment="Center" VerticalTitleAlignment="Center" HorizontalContentAlignment="Left" >
            <Image Source="/Imagenes/Contrato.png" />
        </Controls:Tile>
        <!--btn Listar Contratos-->
        <Controls:Tile x:Name="btnListarContratos" Margin="667,528,381,113" Background="#ff9900" Width="Auto" Height="Auto" Click="btnListarContratos_Click"  FontSize="24" TitleFontSize="18" Title="Listado&#xA;de Contratos" HorizontalTitleAlignment="Center" VerticalTitleAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" >
            <Image Source="/Imagenes/Lista.png" RenderTransformOrigin="1.302,0.573" />
        </Controls:Tile>
    </Grid>


</Controls:MetroWindow>
